{
  "name": "budget-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cc": "npm run prettier && npm run lint",
    "prettier": "prettier --write src/**/*{ts,scss,md}",
    "precommit": "npm run pretty-quick --staged && npm run lint",
    "commitlint": "commitlint -e",
    "test:cover": "rm -rf ./coverage && ng test --no-watch --code-coverage",
    "coveralls":
      "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build:gh-pages:demo1":
      "ng build -e=demo1 -op=gh-pages/demo1 -bh=/budget-app/demo1/",
    "pretty-quick": "pretty-quick"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "bootstrap": "^4.1.0",
    "bourbon": "^5.0.0",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.9",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "commitlint": "^6.1.3",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "prettier": "1.12.0",
    "pretty-quick": "^1.4.1",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  },
  "browserslist": {
    "demo1": ["defaults"],
    "prod": ["> 1%", "last 2 versions"],
    "dev": ["last 2 Chrome version"]
  }
}
